<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Estoque</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

</head>
<body>
    <div class="top-menu">
        <div class="menu-icon">
            <i class="fas fa-bars"></i> <!-- Ícone de menu -->
        </div>
        <div class="home-icon">
            <a href="/dashboard">
                <i class="fas fa-home"></i> <!-- Ícone de home -->
            </a>
        </div>
        <% if (user) { %>
        <div class="user-info">
            <span><%= user.email %></span>
            <i class="fas fa-user-circle"></i>
        </div>
        <% } %>   
    </div>
    
    
    
    <div class="estoque-table">
        <table>
            <h1>Lista de Produtos em Estoque</h1>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Código de Barras</th>
                    <th>Nome</th>
                    <th>Quantidade</th>
                </tr>
            </thead>
            <tbody>
                <% produtos.forEach(produto => { %>
                    <tr>
                        <td><%= produto.id %></td>
                        <td><%= produto.codigo_de_barras %></td>
                        <td>
                            <p><strong><%= produto.descricao %></strong></p>
                            <p><%= produto.nome %></p>
                        </td>
                        <td><%= produto.quantidade %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    <div class="back-button-container">
        <a href="/dashboard" class="back-button">Voltar</a>
    </div>
    <div class="logout-container">
        <a href="/logout" class="logout-btn">Sair</a>
    </div>
</body>
</html>
